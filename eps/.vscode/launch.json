        {
            /* Configuration for the STM32L496 */
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug Release (OpenOCD)",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Cargo Build (release)",
            "runToMain": true,
            "executable": "./target/thumbv7em-none-eabihf/release/eps",
            "device": "STM32L496ZGT6",
            "searchDir": [
                "${workspaceRoot}/openocd_cfg/"
            ],
            "configFiles": [
                "${workspaceRoot}/openocd.cfg",
                //"interface/stlink-v2-1.cfg",
                //"target/stm32l4x.cfg"
            ],
            "svdFile": "${workspaceRoot}/svd/STM32L4x6.svd",
            "swoConfig": {
                "enabled": false,
                "cpuFrequency": 8000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        },
        {
            /* Configuration for the STM32L496 */
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug Debug (OpenOCD)",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Cargo Build (debug)",
            "runToMain": true,
            "executable": "./target/thumbv7em-none-eabihf/debug/eps",
            "device": "STM32L496ZGT6",
            "searchDir": [
                "${workspaceRoot}/openocd_cfg/"
            ],
            "configFiles": [
                "${workspaceRoot}/openocd.cfg",
                //"interface/stlink-v2-1.cfg",
                //"target/stm32l4x.cfg"
            ],
            "svdFile": "${workspaceRoot}/svd/STM32L496.svd",
            "swoConfig": {
                "enabled": false,
                "cpuFrequency": 8000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    {
                        "type": "console",
                        "label": "ITM",
                        "port": 0
                    }
                ]
            }
        }
    ]
